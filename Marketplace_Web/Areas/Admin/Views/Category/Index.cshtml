@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Categories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">

            <div class="row pb-3">
                <div class="col-6"></div>

                <div class="col-6 text-end pb-3">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i>  Create New Category
                    </a>
                </div>
            </div>

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model.OrderBy(c => c.DisplayOrder))
                    {
                        <tr>
                            <td class="col-6">
                                @cat.Name
                            </td>
                            <td>
                                @cat.DisplayOrder
                            </td>
                            <td>
                                <div class="w-70 btn-group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil">&nbsp;</i>Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger">
                                        <i class="bi bi-trash">&nbsp;</i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        
    </div>
</div>

