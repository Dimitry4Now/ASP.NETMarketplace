@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" disabled/>
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" disabled />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductionYear" class="form-control border-0 shadow" disabled/>
                    <label asp-for="ProductionYear" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <textarea asp-for="Description" class="form-control shadow" style="height:130px" disabled></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CreatedDate" class="form-control border-0 shadow" disabled />
                    <label asp-for="CreatedDate" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="LastModified" class="form-control border-0 shadow" disabled />
                    <label asp-for="LastModified" class="ms-2"></label>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
